	public static Scanner teclado = new Scanner(System.in);
	
	
	public Date validaFecha() {
		
		byte dia=0, mes=0, anio=0;
		
		try {
			System.out.println("Ingrese anio de nacimiento");
			anio = teclado.nextByte();	
		} catch (Exception e) {
			System.err.println("Ingrese un dato v√°lido");
		}
		
		
		
		return null;
	}
}
