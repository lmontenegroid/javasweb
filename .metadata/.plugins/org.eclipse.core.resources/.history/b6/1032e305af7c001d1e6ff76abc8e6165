		alumnos = new Alumno[cantidadAlumnos];
		
		for(int i=0; i<cantidadAlumnos; i++) {
			System.out.println("Ingrese nombre");
			nombre = teclado.next();
			
			System.out.println("Ingrese apellido");
			apellido = teclado.next();
			
			System.out.println("Ingrese el tipo de documento");
			tipoDoc = teclado.next();
			
			System.out.println("Ingrese el numero de documento");
			numDoc = teclado.next();
			
			alumno = new Alumno(nombre, apellido, new Documento(tipoDoc, numDoc));
			
			personas[i] = persona;
		}
		
		
		for (Alumno alumnito : personas) {
			System.out.println("Persona N° " +alumnito.getId());
			System.out.println("Nombre -> " + alumnito.getNombre());
			System.out.println("Apellido -> " +alumnito.getApellido());
			System.out.println("Tipo de documento ->" +alumnito.getDocumento().getTipo());
			System.out.println("Numero de documento ->" +alumnito.getDocumento().getNumero());
			System.out.println("Edad -> " +alumnito.getEdad());
			
		}
		System.out.println("Se ingresaron " +cantidadPersonas+ " cantidad de personas.");
		
